<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kz.aknur.newchildcare.signIn.SignInActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="17dp">

            <ImageView

                android:layout_width="100dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:src="@drawable/unicef_long" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="74dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:scaleX="1.8"
                android:scaleY="1.8"
                android:src="@drawable/logo_iu" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:scaleX="1.9"
                android:scaleY="1.9"
                android:src="@drawable/logo_kazlab" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:fontFamily="@font/khula_bold"
            android:text="Добро пожаловать!"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:fontFamily="@font/khula_light"
            android:text="Войдите в свой аккаунт"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:scaleY="1.3"
            android:scaleX="1.3"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:src="@drawable/main_logo" />

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="22dp"
            android:background="@drawable/round_grey_edit_text"
            android:backgroundTint="#33DAD9D9"
            android:drawableLeft="@drawable/auth_user"
            android:drawablePadding="23dp"
            android:fontFamily="@font/khula_light"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:hint="E-mail"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="22dp"
            android:background="@drawable/round_grey_edit_text"
            android:backgroundTint="#33DAD9D9"
            android:drawableLeft="@drawable/auth_key"
            android:drawablePadding="15dp"
            android:fontFamily="@font/khula_light"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:hint="Пароль"
            android:textSize="16sp" />


        <RelativeLayout
            android:layout_marginLeft="33dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="18dp"
            android:layout_alignParentLeft="true"
            android:text="Забыли пароль?"
            android:textColor="@color/black"
            android:fontFamily="@font/khula_light"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:id="@+id/sign_in_button"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/round_purple_btn"
                android:fontFamily="@font/khula_bold"
                android:gravity="right"
                android:paddingHorizontal="35dp"
                android:paddingTop="5dp"
                android:text="Войти"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>




    </LinearLayout>

    <ImageView
        android:layout_marginLeft="-5dp"
        android:layout_alignParentBottom="true"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:src="@drawable/decp" />

    <ImageView
        android:layout_marginLeft="70dp"
        android:layout_alignParentBottom="true"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:src="@drawable/deco" />

    <TextView
        android:padding="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/CreateAccount"
        android:textColor="@color/black"
        android:fontFamily="@font/khula_bold"
        android:layout_marginTop="12dp"
        android:text="Создать аккаунт"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <FrameLayout
        android:id="@+id/signInLv"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#98000000" />

        <ProgressBar
            android:padding="2dp"
            android:background="@drawable/round_orange_btn"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

</RelativeLayout>



