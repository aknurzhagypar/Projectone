<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:id="@+id/groupIcon"
        android:background="@drawable/round_search_bg"
        android:layout_width="80dp"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/hospitalIcon"
            android:scaleType="centerInside"
            android:src="@drawable/coviddemo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_toRightOf="@+id/groupIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hospName"
                android:textColor="@color/black"
                android:text="Название учреждения"
                android:fontFamily="@font/khula_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/hospText"
                android:text="Информация"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/hospAddress"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:layout_marginTop="25dp"
                android:text="Алматы, адрес"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>