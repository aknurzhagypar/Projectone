<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent"
    tools:context="kz.aknur.newchildcare.content.home.articles.details.ArticleDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/artBackButton"
            android:padding="5dp"
            android:background="@drawable/round_search_bg"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/khula_bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/artDetailIcon"
            android:src="@drawable/child"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

        <TextView
            android:id="@+id/artDetailTitle"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_below="@+id/artDetailIcon"
            android:text="Title"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/artDetailText"
            android:textColor="@color/black"
            android:layout_below="@+id/artDetailTitle"
            android:text="Text"
            android:layout_marginBottom="55dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="25dp"
            android:textColor="@color/black"
            android:text="Сохранить в избранные"
            android:gravity="left"
            android:drawableLeft="@drawable/ic_baseline_favorite_24"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>



</ScrollView>