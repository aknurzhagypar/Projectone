<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:background="@drawable/round_search_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/groupIcon"
        android:background="@drawable/round_purple_btn"
        android:layout_width="80dp"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/childListIcon"
            android:scaleType="centerInside"
            android:src="@drawable/child"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_toRightOf="@+id/groupIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/childListName"
                android:textColor="@color/black"
                android:text="Аланчик"
                android:fontFamily="@font/khula_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Дата рождения: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/childListText"
                android:maxLength="10"
                android:text="4 года"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>