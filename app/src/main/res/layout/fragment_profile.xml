<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="kz.aknur.newchildcare.content.profile.ProfileFragment">



    <ImageView

        android:layout_alignParentLeft="true"
        android:src="@drawable/pregnancy"
        android:layout_width="202.5dp"
        android:layout_height="300dp"/>

    <ImageView
        android:id="@+id/setProfileBtn"
        android:layout_margin="8dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_baseline_exit_to_app_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout

        android:layout_marginHorizontal="14dp"
        android:layout_above="@+id/largeBannerRv"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:gravity="center"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/khula_bold"
                android:text="Профайл"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingHorizontal="15dp"
                android:background="@drawable/round_purple_btn"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/hfLocationIc"
                android:fontFamily="@font/khula_bold"
                android:text="Для родителей"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/goToChildList"
                android:layout_marginLeft="10dp"
                android:paddingHorizontal="15dp"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/hfLocationIc"
                android:fontFamily="@font/khula_light"
                android:text="Детки"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:background="@drawable/round_search_bg"
            android:layout_width="match_parent"
            android:layout_height="189dp">

            <TextView
                android:id="@+id/profileText"
                android:textColor="#000000"
                android:layout_margin="15dp"
                android:gravity="right"
                android:text="..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <TextView
            android:textColor="#000000"
            android:layout_marginTop="38dp"
            android:gravity="center"
            android:text="Рекомендации по вашему сроку"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginVertical="10dp"
            android:src="@drawable/ic_baseline_signal_wifi_off_24"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:gravity="center"
            android:text="Здесь скоро будут интересные для вас статьи"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal"
        android:elevation="2dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="225dp"
        android:background="@drawable/white_bg"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="match_parent">

            <TextView
                android:text="Вес"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="18sp"
                android:textColor="#5C23DB"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="1.6 кг"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_alignParentRight="true"
                android:text="Рост"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="18sp"
                android:textColor="#5C23DB"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="25 см."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/profileFragLv"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#31000000" />

        <ProgressBar
            android:padding="2dp"
            android:background="@drawable/round_orange_btn"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

</RelativeLayout>