<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/round_search_bg"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/largeCatImage"
            android:scaleType="centerInside"
            android:src="@drawable/coviddemo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/largeCatTitle"
            android:layout_margin="15dp"
            android:textColor="#000000"
            android:gravity="right"
            android:textSize="18sp"
            android:fontFamily="@font/khula_bold"
            android:text="То, что вы должны знать о COVID-19!"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>


    </RelativeLayout>


</RelativeLayout>