<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_search_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:id="@+id/groupIcon"
        android:background="@drawable/round_search_bg"
        android:layout_width="80dp"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/artIcon"
            android:scaleType="centerInside"
            android:src="@drawable/coviddemo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_toRightOf="@+id/groupIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/artName"
                android:textColor="@color/black"
                android:text="Название статьи"
                android:fontFamily="@font/khula_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:maxLines="4"
                android:id="@+id/artText"
                android:text="Описание"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_gravity="right"
                android:src="@drawable/ic_baseline_favorite_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>




    </RelativeLayout>


</RelativeLayout>